#!/bin/sh
'''exec' uv run --script --project "$(dirname -- "$(realpath -- "$0")")" "$0" "$@"
' '''
# https://github.com/astral-sh/uv/issues/12193#issuecomment-2726977692

import sys
import getopt
from ocrmac import ocrmac

optlist, args = getopt.getopt(sys.argv[1:], "l:")
opts = dict(optlist)

if len(args) != 1:
    print("Usage: ocrmac [-l <language>] <image>")
    print("  -l <language>  Language(s) to use for OCR, comma-separated")
    print("                 (default: en-US)")
    sys.exit(1)

# https://github.com/straussmaximilian/ocrmac
annotations = ocrmac.OCR(args[0],
        recognition_level='accurate',
        language_preference=opts.get("-l", "en-US").split(',')
        ).recognize()
# print(annotations)

for annotation in annotations:
    print(annotation[0])

