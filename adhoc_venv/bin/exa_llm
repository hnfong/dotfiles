#!/bin/bash
set -e
pushd "$(dirname "$(readlink -f "$0")")"/.. >/dev/null
source .venv/bin/activate
additional_args=()
if [[ "$@" != *'-m'* ]]; then
    # https://github.com/tonybaloney/llm-github-models
    additional_args=("-m" "github/gpt-4.1-mini")
fi
popd >/dev/null
PYTHONWARNINGS=ignore GITHUB_MODELS_KEY=`cat ~/.github_token` exec llm -T get_answer "${additional_args[@]}" "$@"
